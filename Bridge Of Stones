#include<bits/stdc++.h>
#include<algorithm>
using namespace std;

void findJumps(int, int);

// Function to find number of jumps
// N : number inscribed on the last stone.
// X : number on which we have to reach
void findJumps(int N, int X){
    
    int i, minJumps, m1=0, m2=0;
    
    m1=(X/2)+1;
    m2=(N/2)+1;

    if(m2-m1 < m1) {
        minJumps = m2-m1;
    }
    else {
        minJumps = m1-1;
    }
    
    cout<<minJumps;
    cout << endl;
    
}

// { Driver Code Starts.

int main(){
    
    int t;
    cin >> t;
    
    while(t--){
        long long N, X;
        cin >> N >> X;
        
        findJumps(N, X);
    }
    
    return 0;
}
